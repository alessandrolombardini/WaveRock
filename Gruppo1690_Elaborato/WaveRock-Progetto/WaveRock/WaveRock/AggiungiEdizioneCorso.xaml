            <RowDefinition Height="19*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF4F4F5" Margin="8.667,5.667,4,9.333" Stroke="Black" Grid.Column="1" Grid.ColumnSpan="19" Grid.Row="1" Grid.RowSpan="2"/>
        <Label Content="Aggiungi edizione corso" HorizontalContentAlignment="Center" Margin="6.667,5.667,4,8.333" FontSize="18" Grid.Column="1" Grid.ColumnSpan="19" Grid.Row="1" Grid.RowSpan="2"/>
        <Label x:Name="label_tipologia" Content="Tipologia corso" Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="4" Margin="11,0.333,2,1.667" Grid.RowSpan="4"/>
        <Label x:Name="label_data" Content="Data inizio" Margin="11,0.667,2,4.666" Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="18"/>
        <Label x:Name="label_numeroPartecipanti1" Content="Numero partecipanti" Margin="11,0,4.333,1" Grid.Column="3" Grid.ColumnSpan="6" Grid.Row="12" Grid.RowSpan="3"/>
        <Label x:Name="label_istruttore" Content="Istruttore" Margin="11,1.667,4.333,4.667" Grid.Column="3" Grid.ColumnSpan="6" Grid.Row="9" Grid.RowSpan="2"/>
        <Button x:Name="btt_aggiungi" Content="Aggiungi" Margin="5,3.334,8.333,0" Click="Btt_aggiungi_Click" Grid.Column="16" Grid.ColumnSpan="6" Grid.Row="22" Grid.RowSpan="2"/>
        <DatePicker x:Name="date_data" Margin="0.333,0.667,1,4" Grid.Column="11" Grid.ColumnSpan="5" Grid.Row="18" Grid.RowSpan="2"/>
        <ComboBox x:Name="combo_tipologia"  DisplayMemberPath="Nome" SelectedValuePath="IDCorso" Margin="0.333,3.333,4.333,0.667" SelectionChanged="Combo_tipologia_SelectionChanged" Grid.Column="11" Grid.Row="4" Grid.ColumnSpan="6" Grid.RowSpan="4"/>
        <ComboBox x:Name="combo_istruttore" DisplayMemberPath="Cognome" SelectedValuePath="IDPersona" Margin="0.333,3.667,4.333,3.667" Grid.Column="11" Grid.Row="9" Grid.ColumnSpan="6" Grid.RowSpan="2"/>
        <ComboBox x:Name="combo_numeroPartecipanti" Margin="0.333,2,4.333,0" Grid.Column="11" Grid.Row="13" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
